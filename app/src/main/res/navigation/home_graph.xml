<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_graph.xml"
    app:startDestination="@id/navigation_home">

    <!--첫번째 진입점은 homeFragment-->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.hanto.payapp.HomeFragment"
        android:label="@string/label_home_screen"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_home_to_paymentMethodFragment"
            app:destination="@id/navigation_payment_method" />
    </fragment>
    <fragment
        android:id="@+id/navigation_transfer"
        android:name="com.hanto.payapp.TransferAccountFragment"
        android:label="@string/label_transfer_screen"
        tools:layout="@layout/fragment_account_transfer" />
    <fragment
        android:id="@+id/navigation_payment_method"
        android:name="com.hanto.payapp.PaymentMethodFragment"
        android:label="PaymentMethodFragment"
        tools:layout="@layout/fragment_payment_method" />
</navigation>